<?xml version="1.0" encoding="UTF-8"?>

<view>
    <columns>
        <column name="code" display="none" order="100">
            <widget type="text" fieldname="idtarea" />
        </column>
        <column name="project" order="110">
            <widget type="select" fieldname="idproyecto" onclick="EditProyecto">
                <values source="proyectos" fieldcode="idproyecto" fieldtitle="nombre"></values>
            </widget>
        </column>
        <column name="task" order="120">
            <widget type="text" fieldname="nombre" />
        </column>
        <column name="description" order="130">
            <widget type="text" fieldname="descripcion" />
        </column>
        <column name="quantity" order="140">
            <widget type="integer" fieldname="cantidad" />
        </column>
        <column name="start-date" display="right" order="150">
            <widget type="date" fieldname="fechainicio" />
        </column>
        <column name="end-date" display="left" order="160">
            <widget type="date" fieldname="fechafin" />
        </column>
        <column name="status" display="right" order="170">
            <widget type="select" fieldname="idfase">
                <values source="tareas_fases" fieldcode="idfase" fieldtitle="nombre" />
            </widget>
        </column>
        <column name="date" display="right" order="180">
            <widget type="date" fieldname="fecha" />
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="warning" fieldname="editable">0</option>
            <option color="secondary" fieldname="privado">1</option>
            <option color="info" fieldname="codcliente">null:</option>
            <option color="success" fieldname="editable">1</option>
        </row>
    </rows>
</view>