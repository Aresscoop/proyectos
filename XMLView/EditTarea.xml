<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="code" display="none" order="100">
            <widget type="text" fieldname="idtarea" />
        </column>
        <column name="project" order="110">
            <widget type="autocomplete" fieldname="idproyecto" readonly="dinamic" required="true" onclick="EditProyecto">
                <values source="proyectos" fieldcode="idproyecto" fieldtitle="nombre"></values>
            </widget>
        </column>
        <column name="name" order="120">
            <widget type="text" fieldname="nombre" required="true" />
        </column>
        <column name="quantity" order="130">
            <widget type="number" min="1" fieldname="cantidad" decimal="0" required="true" />
        </column>
        <column name="date" display="right" order="140">
            <widget type="date" fieldname="fecha" readonly="true" required="true" />
        </column>
        <column name="status" display="right" order="150">
            <widget type="select" fieldname="idfase" required="">
                <values source="tareas_fases" fieldcode="idfase" fieldtitle="nombre" />
            </widget>
        </column>
        <column name="start-date" display="right" order="160">
            <widget type="date" fieldname="fechainicio" />
        </column>
        <column name="end-date" display="right" order="170">
            <widget type="date" fieldname="fechafin" />
        </column>
        <column name="description" numcolumns="12" order="180">
            <widget type="textarea" fieldname="descripcion" />
        </column>
    </columns>
</view>